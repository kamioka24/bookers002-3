<% if @user_or_book == "1" %>
    <h2>Users search for</h2>
    <table width="800">
        <% @users.each do |user| %>
            <tr>
                <th><%= attachment_image_tag user, :profile_image, size: "60x60", fallback: "no_image.jpg" %></th>
                <th><%= user.name %></th>
                <th><%= link_to "Show", user_path(user) %></th>
            </tr>
        <% end %>
    </table>
<% elsif @user_or_book == "2" %>
    <h2>Books search for</h2>
    <table width="800">
        <% @books.each do |book| %>
            <tr>
                <th><%= attachment_image_tag book.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %></th>
                <th><%= book.title %></th>
                <th><%= link_to "Show", book_path(book) %></th>
            </tr>
        <% end %>
    </table>
<% end %>