<div class="container">
	<div class="row">
		<p><%= flash[:notice] %></p>

		<%= render 'users/side', user: @my_book.user, book: @book %>

		<div class="col-xs-9">
			<table class="table table-hover table-inverse" width="600">
				<h1>Book detail</h1>
				<tr>
					<td><%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %><br>
							<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @my_book.title, book_path %></td>
					<td><%= @my_book.body %></td>

					
				    <td>コメント数:<%= @my_book.book_comments.count %></td>
				    
					<% if @my_book.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@my_book.id), class: "book-edit book-btn" %></td>
					<% end %>
					<% if @my_book.user == current_user %>
						<td><%= link_to "Destroy", book_path(@my_book.id), class: "book-destroy book-btn", method: :delete, "data-confirm" => "本当に削しますか？" %></td>
					<% end %>
				</tr>
			</table>
		    <div class="row">
		        <div class="col-sm-12">
		        	<%= form_for [@my_book, @book_comment] do |f| %>
						<!-- bookに紐づいたbook_commentだから、配列で２つ書く必要がある -->
			            <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに" %>
			            <%= f.submit "送信" %>
		            <% end %>
		        </div>
		    </div>
		</div>
	</div>
</div>