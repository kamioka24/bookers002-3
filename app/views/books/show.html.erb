<div class="container">
	<div class="row">
		<p><%= flash[:notice] %></p>

		<%= render 'users/side', user: @book.user, book: @book %>

		<div class="col-xs-9">
			<table class="table table-hover table-inverse" width="600">
				<h1>Book detail</h1>
				<tr>
					<td><%= link_to user_path(@user) do %>
							<%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %><br>
							<%= @user.name %> <!-- 本の投稿者の名前 @userはコントローラにて定義済み -->
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path %></td>
					<td><%= @book.body %></td>

					<td>
						<% if @book.favorited_by?(current_user) %> <!-- 投稿本にログインユーザーのいいねがあるかどうか -->
							<%= link_to book_favorites_path(@book), method: :delete do %>
								<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		    					<%= @book.favorites.count %>
							<% end %>
						<% else %>
							<%= link_to book_favorites_path(@book), method: :post do %>
							    <i class="fa fa-heart-o" aria-hidden="true"></i>
							    <%= @book.favorites.count %>
							<% end %>
						<% end %>
					</td>
				    <td>コメント数:<%= @book.book_comments.count %></td>
				    
					<% if @user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book.id), class: "book-edit book-btn" %></td>
					<% end %>
					<% if @user == current_user %>
						<td><%= link_to "Destroy", book_path(@book.id), class: "book-destroy book-btn", method: :delete, "data-confirm" => "本当に削しますか？" %></td>
					<% end %>
				</tr>
			</table>

			<% @book.book_comments.each do |book_comment|  %>
				<%= link_to (book_comment.user) do %>
					<%= attachment_image_tag @book_comment.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %><br>
					<%= @book_comment.user.naem %>
				<% end %>
				<%= book_comment.comment %>
				<% if book.comment.user == current_user %>
					<%= link_to "Destroy", book_comment_path(book_comment.id), class: "book-destroy book-btn", method: :delete, "data-confirm" => "本当に削しますか？" %>
					<% end %>
			<% end %>

		    <%= form_for [@book, @book_comment] do |f| %>
				<!-- bookに紐づいたbook_commentだから、配列で２つ書く必要がある -->
			    <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに" %>
			    <%= f.submit "送信" %>
            <% end %>
		</div>
	</div>
</div>