<div class="container">
	<div class="row">
		<%= render 'users/side', user: @user, book: @book %>

		<div class="col-xs-9">
			<table class="table table-hover table-inverse" width="600">
				<h1>Books</h1>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr align="left">
						<td><%= link_to user_path(book.user.id) do %>
							<%= attachment_image_tag book.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
						<td>
							<% if book.favorited_by?(current_user) %> <!-- 投稿本にログインユーザーのいいねがあるかどうか -->
								<%= link_to book_favorites_path(book), method: :delete do %>
									<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
								<% end %>
							<% else %>
								<%= link_to book_favorites_path(book), method: :post do %>
								    <i class="fa fa-heart-o" aria-hidden="true"></i>
								<% end %>
							<% end %>
							<%= book.favorites.count %>
						</td>
						<td>コメント数:<%= book.book_comments.count %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>