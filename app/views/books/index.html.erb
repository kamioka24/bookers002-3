<% if @book.errors.any? %>
	<%= @book.errors.count %>error prohibited this book from being saved:<br>
		<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
<% end %>

<div class="container">
	<div class="row">
		<%= render 'users/side', user: @user, book: @book %>

		<div class="col-xs-9">
			<table class="table table-hover table-inverse" width="600">
				<h1>Books</h1>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr align="left">
						<td><%= link_to user_path(book.user.id) do %>
							<%= attachment_image_tag book.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
						<td></td>
						<td>コメント数:<%= @book.book_comments.count %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>