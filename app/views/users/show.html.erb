<div class="container">
	<div class="row">
		<p><%= flash[:notice] %></p>

		<%= render 'users/side', user: @user, book: @book %>

		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse" width= "600">
				<tr align="left">
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr>
						<td><%= link_to (book.user) do %>
								<%= attachment_image_tag book.user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td><%= link_to book.title, book_path(book) %></td>
						<td><%= book.body %></td>
						<td>コメント数:<%= book.book_comments.count %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>