<h1>Follower Users</h1>

<div class="col-xs-9">
	<table class="table table-hover table-inverse" width="600">
		<h1>Users</h1>
		<tr>
			<th>image</th>
			<th>name</th>
		</tr>
		<% @users.each do |user| %>
			<tr align="left">
				<td><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg"%></td>
				<td><%= user.name %></td>
				<td>フォロー数:<%= user.followings.count %></td> <!-- userが使える理由は？ -->
				<td>フォロワー数:<%= user.followers.count %></td> <!-- userが使える理由は？ -->
				<td>
					<% if user.id != current_user.id %>
						<% if current_user.following?(user) %>
					    	<%= render 'unfollow', user: user %>
					  	<% else %>
					    	<%= render 'follow', user: user %>
					  	<% end %>
					<% end %>
				</td>
				<td><%= link_to "Show", user_path(user) %></td>
			</tr>
		<% end %>
	</table>
</div>